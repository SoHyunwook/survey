<h3><%= question_group.new_record? ? "New Group" : "Edit Group" %></h3>


<%= form_for question_group do |f| %>
  <%- if question_group.errors.any? %>
    <ul>
      <%- question_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="input-field col s6">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :writer, :value => current_user.username %>
  </div>
 
  
  <%= f.submit 'new title',:class => "btn btn-primary" %>
  <a href="/" class="btn btn-default" role="button">뒤로 가기</a>

 
<% end %>




