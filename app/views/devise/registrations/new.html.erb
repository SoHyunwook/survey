<div class="border-form-div" style="margin-right: 15%; margin-top: 10%; margin-bottom:10px;">
<h2 style="text-align:center;">회원가입</h2><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "이메일을 입력해주세요.",:style => "width:100%;" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "최소 6자 이상 입력해주세요.",:style => "width:100%;" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "다시 한 번 입력해주세요.",:style => "width:100%;" %>
  </div>
  
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "off", placeholder: "실명을 입력해주세요.",:style => "width:100%;"  %>
  </div>
  
  <div class="field">
    <%= f.label :school %><br />
    <%= f.text_field :school, autocomplete: "off", placeholder: "재학중인 대학교를 입력해주세요.", :style => "width:100%;" %>
  </div>
  
  <div class="actions">
    <%= f.submit "회원가입", :class => "btn btn-primary buttons", :style => "width:100%; margin-bottom:5px;" %>
    <%= f.hidden_field :point, :value => "20" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
