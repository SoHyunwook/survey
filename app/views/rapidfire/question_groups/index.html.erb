<h2>
  새 설문조사 쓰기<br>
  <% if can_administer? %>
    <%= link_to "설문 조사 제목 쓰기", new_question_group_path %>
  <% end %>
</h2>
<% if user_signed_in? %>
  <div align="right">
    이름 : <%= current_user.username %>
    <br>
    이메일 :  <%= current_user.email %>
    <br>
    point : <%= current_user.point %>
    postnum : <%= current_user.postnum %>
    submitnum : <%= current_user.submitnum %>
    <br>
   <a href="/users/sign_out">로그아웃</a>
  </div>
<% end %>
<hr/>

<table>
  <colgroup>
    <col>
    <col width="250">
  </colgroup>
  <thead>
    <tr>
      <th>설문 조사 게시글</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "question_group", collection: @question_groups %>
  
  </tbody>
</table>
